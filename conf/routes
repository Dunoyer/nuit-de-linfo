# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# Home page
GET     /                           controllers.Application.index()
GET     /kits                       controllers.Application.kits()
GET     /attentat                   controllers.Application.attentat()
GET     /seisme                     controllers.Application.seisme()
GET     /infos                      controllers.Application.infos()
GET     /tsunami                    controllers.Application.tsunami()
#GET     /produits/:keyword/:sortBy  controllers.Client.initListSearch(keyword: String, sortBy:String)
POST    /produits/eau               controllers.Client.initListSearch()
GET     /panier/:idProduit/:quantite/:cartId  controllers.CartController.addToCart(idProduit: String, quantite: String, cartId: String)
POST    /produits/couche            controllers.Client.initListSearch2()


# Map static resources from the /public folder to the /assets URL path
GET     /assets/*file               controllers.Assets.versioned(path="/public", file: Asset)
